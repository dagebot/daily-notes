<style>
  .page-layout {
    display: flex;
    gap: 2rem;
    align-items: flex-start;
  }
  
  .sidebar {
    flex: 0 0 220px;
    position: sticky;
    top: 2rem;
  }
  
  .content {
    flex: 1;
    min-width: 0;
  }
  
  .intro {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem 0;
    border-bottom: 1px solid var(--color-border);
  }
  
  .intro h1 {
    font-family: var(--font-hand);
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }
  
  .subtitle {
    color: var(--color-muted);
    font-size: 1rem;
  }
  
  .post-card {
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    background: white;
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    transition: transform 0.2s, box-shadow 0.2s;
  }
  
  .post-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 16px rgba(0,0,0,0.08);
  }
  
  .date {
    font-size: 0.8rem;
    color: var(--color-muted);
    font-family: var(--font-hand);
  }
  
  .post-card h2 {
    margin: 0.5rem 0 0.75rem;
    font-size: 1.3rem;
  }
  
  .post-card h2 a {
    text-decoration: none;
    color: var(--color-text);
  }
  
  .post-card h2 a:hover {
    color: var(--color-accent);
  }
  
  .post-card p {
    color: var(--color-muted);
    line-height: 1.7;
    font-size: 0.95rem;
  }
  
  @media (max-width: 640px) {
    .page-layout {
      flex-direction: column;
    }
    
    .sidebar {
      flex: none;
      width: 100%;
      position: static;
    }
  }
</style>